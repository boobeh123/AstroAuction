<%- include('./partials/head.ejs') %>
<%- include('./partials/navigation.ejs') %>
<%- include('./partials/flash.ejs') %>
<main id="main-content" class="profile-main">
    <div class="container">
        <article class="card-panel z-depth-2">
            <header>
                <h1 id="edit-profile-heading">Edit your profile</h1>
                <p class="section-description">Update your personal information</p>
            </header>

        <form action="/profile/edit/<%=user._id %>?_method=PUT" data-id="<%=user._id%>" method="POST" aria-labelledby="edit-profile-heading" class="edit-profile-form">
        <div class="form-group">
            <label for="edit-profile-name">Display name</label>
            <input id="edit-profile-name" type="text" placeholder="<%= user.name || 'Enter your name' %>" name="userName" aria-describedby="name-help" required>
            <small id="name-help" class="form-help">This is how your name will appear to other users</small>
        </div>
        <div class="form-actions">
            <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i> Save changes</button>
            <a href="/profile" class="btn btn-secondary">Cancel</a>     
        </form>
        <form action="/profile/delete/<%=user._id%>?_method=DELETE" data-id="<%=user._id%>" method="POST" id="deleteForm">
            <button type="submit" class="btn red waves-effect waves-light hoverable">
                <i class="fas fa-trash left" aria-hidden="true"></i> Delete Profile</button>
        </form>
        </div>
        </article>
    </div>
</main>
<%- include('./partials/footer.ejs') %>