<%- include('./partials/head.ejs') %>
<%- include('./partials/navigation.ejs') %>
<%- include('./partials/flash.ejs') %>
<!-- to do: semantic/aria -->
<main id="main-content">
  <section class="page-header">
    <article class="auth-card">
      <header>
        <h1 id="login-title" class="auth-card-title">Welcome</h1>
        <p class="auth-card-subtitle">Log in to continue</p>
      </header>
      <form class="auth-form" action="/login" method="POST">
        <div class="form-group">
          <label for="email">Email</label>
          <input id="email" type="email" name="email" placeholder="you@example.com" autocomplete="email" required aria-required="true">
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input id="password" type="password" name="password" placeholder="Enter your password" autocomplete="current-password" required aria-required="true">
        </div>
        <div class="form-actions">
          <button type="submit" class="btn btn-primary">Log in</button>
        </div>
      </form>
      <footer>
        <p class="helper-text">Need an account? <a href='/signup'>Create account</a></p>
      </footer>
    </article>
  </section>
</main>
<%- include('./partials/footer.ejs') %>