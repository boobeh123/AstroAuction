<%- include('./partials/head.ejs') %>
<%- include('./partials/navigation.ejs') %>
<main id="main-content" class="error-page">
    <div class="container">
        <div class="error-content">
            <div class="error-icon">
                <i class="fas fa-lock" aria-hidden="true"></i>
            </div>
            <h1 class="error-title">403 - Access Denied</h1>
            <p class="error-message">You don't have permission to access this page.</p>
            <div class="error-actions">
                <% if (typeof user !== 'undefined' && user) { %>
                    <a href="/auction" class="btn btn-primary">
                        <i class="fas fa-gavel" aria-hidden="true"></i> View Auctions
                    </a>
                    <a href="/profile" class="btn btn-secondary">
                        <i class="fas fa-user" aria-hidden="true"></i> My Profile
                    </a>
                <% } else { %>
                    <a href="/login" class="btn btn-primary">
                        <i class="fas fa-sign-in-alt" aria-hidden="true"></i> Log In
                    </a>
                    <a href="/" class="btn btn-secondary">
                        <i class="fas fa-home" aria-hidden="true"></i> Go Home
                    </a>
                <% } %>
            </div>
        </div>
    </div>
</main>
<%- include('./partials/footer.ejs') %>